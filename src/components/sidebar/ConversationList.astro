---
import ConversationItem from './ConversationItem.astro'
---

<div class="flex-1 overflow-y-auto scrollbar-thin scrollbar-thumb-slate-700 scrollbar-track-transparent">
  <div id="no-conversations" class="p-4 text-center">
    <div class="w-12 h-12 bg-slate-800 rounded-full flex items-center justify-center mx-auto mb-3">
      <svg class="w-6 h-6 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
      </svg>
    </div>
    <p class="text-sm text-slate-500">Sin conversaciones</p>
    <p class="text-xs text-slate-600 mt-1">Comienza un nuevo chat</p>
  </div>

  <ul id="conversations-list" class="p-2 space-y-1"></ul>
</div>

<template id="conversation-template">
  <ConversationItem id="" title="" updatedAt={0} isTemplate />
</template>
