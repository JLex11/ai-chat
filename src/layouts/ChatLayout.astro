---
import Layout from './Layout.astro'

interface Props {
  title?: string
}

const { title = 'AI Chat' } = Astro.props
---

<Layout title={title}>
  <div class="flex h-screen overflow-hidden">
    <slot name="sidebar" />
    <main class="flex-1 flex flex-col min-w-0">
      <slot name="content" />
    </main>
  </div>
  <slot />
</Layout>
