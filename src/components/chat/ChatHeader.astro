---
import { AVAILABLE_MODELS } from '../../scripts/config/models'
import { SYSTEM_PROMPTS } from '../../scripts/config/prompts'
import Button from '../ui/Button.astro'
import IconButton from '../ui/IconButton.astro'
import Select from '../ui/Select.astro'

const modelOptions = AVAILABLE_MODELS.map(m => ({
  value: m.id,
  label: `${m.name} (${m.size})`,
  description: m.description,
}))

const promptOptions = SYSTEM_PROMPTS.map(p => ({
  value: p.id,
  label: p.name,
}))
---

<header class='flex items-center justify-between p-4 border-b border-slate-700 bg-slate-900/50'>
  <div class='flex items-center gap-3'>
    <IconButton id='toggle-sidebar' title='MenÃº' class='lg:hidden'>
      <svg class='w-5 h-5' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
        <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M4 6h16M4 12h16M4 18h16'></path>
      </svg>
    </IconButton>

    <div class='flex items-center gap-2'>
      <div class='w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center'>
        <svg class='w-5 h-5 text-white' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
          <path
            stroke-linecap='round'
            stroke-linejoin='round'
            stroke-width='2'
            d='M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z'></path>
        </svg>
      </div>
      <h1 class='text-lg font-bold text-white hidden sm:block'>AI Chat</h1>
    </div>
  </div>

  <div class='flex items-center gap-3'>
    <div class='flex items-center gap-2'>
      <label for='prompt-select' class='text-sm text-slate-400 hidden lg:block'>Modo:</label>
      <Select id='prompt-select' options={promptOptions} class='w-40 md:w-48' />
    </div>

    <div class='flex items-center gap-2'>
      <label for='model-select' class='text-sm text-slate-400 hidden md:block'>Modelo:</label>
      <Select id='model-select' options={modelOptions} class='w-48 md:w-56' />
    </div>

    <div class='h-6 w-px bg-slate-700 hidden sm:block'></div>

    <Button id='new-chat-btn' variant='primary' size='sm'>
      <svg class='w-4 h-4 mr-1.5' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
        <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M12 4v16m8-8H4'></path>
      </svg>
      <span class='hidden sm:inline'>Nueva</span>
    </Button>
  </div>
</header>
